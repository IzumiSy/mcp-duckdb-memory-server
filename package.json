{
  "name": "@izumisy/mcp-duckdb-memory-server",
  "version": "1.1.7",
  "private": false,
  "description": "MCP Memory Server with DuckDB backend",
  "homepage": "https://github.com/IzumiSy/mcp-duckdb-memory-server",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IzumiSy/mcp-duckdb-memory-server.git"
  },
  "type": "module",
  "main": "dist/index.mjs",
  "scripts": {
    "dev": "pnpm build && npx @modelcontextprotocol/inspector pnpm start",
    "build": "tsdown src/index.ts && shx chmod +x dist/index.mjs",
    "start": "node dist/index.mjs",
    "prepare": "npm run build",
    "test": "vitest run",
    "type-check": "tsc --noEmit --pretty",
    "changeset:publish": "pnpm build && changeset publish"
  },
  "bin": {
    "mcp-duckdb-memory-server": "dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "mcp",
    "memory",
    "knowledge",
    "graph",
    "duckdb"
  ],
  "author": "IzumiSy",
  "license": "MIT",
  "dependencies": {
    "@duckdb/node-api": "1.4.1-r.5",
    "@modelcontextprotocol/sdk": "^1.20.1",
    "fuse.js": "^7.1.0",
    "zod": "^3"
  },
  "devDependencies": {
    "@cfworker/json-schema": "^4.1.1",
    "@changesets/cli": "^2.28.1",
    "@swc/core": "^1.15.8",
    "@types/node": "^25",
    "prettier": "^3",
    "shx": "^0.4.0",
    "tsdown": "^0.18.4",
    "typescript": "^5",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": "24.x"
  }
}
